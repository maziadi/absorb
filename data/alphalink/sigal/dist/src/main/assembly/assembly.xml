<assembly>
  <formats>
    <format>tar.bz2</format>
  </formats>
  <dependencySets>
    <dependencySet>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <outputDirectory>/lib</outputDirectory>
      <includes>
        <include>*:*</include>
      </includes>
      <excludes>
        <exclude>org.apache.felix.configadmin:*</exclude>
        <exclude>org.apache.felix.eventadmin:*</exclude>
        <exclude>org.ops4j.pax.logging:*</exclude>
      </excludes>
    </dependencySet>
  </dependencySets>
  <fileSets>
    <fileSet>
      <directory>src/main/etc</directory>
      <fileMode>0755</fileMode>
      <outputDirectory></outputDirectory>
    </fileSet> 
    <fileSet>
      <directory>../as/src/main/resources</directory>
      <fileMode>0755</fileMode>
      <outputDirectory>sql</outputDirectory>
      <includes>
        <include>schema.sql</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>
