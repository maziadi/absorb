<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration
  xmlns:log4j="http://jakarta.apache.org/log4j/"
  threshold="all"
  debug="false">

  <appender
    name="STDOUT"
    class="org.apache.log4j.ConsoleAppender">
    <param
      name="Threshold"
      value="DEBUG"/>
    <layout
      class="org.apache.log4j.PatternLayout">
      <param
        name="ConversionPattern"
        value="%6d %5p %40c{1} - %m%n"/>
    </layout>
  </appender>

  <logger
    name="com.initsys">
    <level
      value="DEBUG"/>
  </logger>

  <logger
    name="org.asteriskjava">
    <level
      value="DEBUG"/>
  </logger>

  <root>
    <priority
      value="INFO"/>
    <appender-ref
      ref="STDOUT"/>
  </root>
</log4j:configuration>
