#!/usr/bin/env ruby
require 'net/http'
require 'uri'
require 'syslog'

Syslog.open "alert-ruby-nms"
Syslog.info "ALERTE : #{ARGV.join(" ")}"

subject = ARGV[0]
tm = ARGV[1]
nm = ARGV[2]
phone = ARGV[3]
nodeid = ARGV[4]

Net::HTTP.post_form URI.parse('http://localhost:8080/alert-nms/opennms'),
                   { "subject" => subject, "numeric-message" => nm , "text-message" => tm , "phone" => phone , "nodeid" => nodeid }


