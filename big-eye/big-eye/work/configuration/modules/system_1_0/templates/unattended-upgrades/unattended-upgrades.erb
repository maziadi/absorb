// Automatically upgrade packages from these (origin, archive) pairs
Unattended-Upgrade::Allowed-Origins {
  <% if origin_stable == true %>
  "${distro_id} stable";
  <% end %>
  <% if origin_security == true %>
  "${distro_id} ${distro_codename}-security";
  <% end %>
  <% if origin_updates == true %>
  "${distro_id} ${distro_codename}-updates";
  <% end %>
  <% if origin_proposed_updates == true %>
  "${distro_id} ${distro_codename}-proposed-updates";
  <% end %>
};

// List of packages to not update
Unattended-Upgrade::Package-Blacklist {
};

// Send email to this address for problems or packages upgrades
// If empty or unset then no email is sent, make sure that you
// have a working mail setup on your system. The package 'mailx'
// must be installed or anything that provides /usr/bin/mail.
<% if mail != '' %>
Unattended-Upgrade::Mail "<%= mail %>";
<% end %>

// Do automatic removal of new unused dependencies after the upgrade
// (equivalent to apt-get autoremove)
Unattended-Upgrade::Remove-Unused-Dependencies "<%= autoremove %>";

// Automatically reboot *WITHOUT CONFIRMATION* if a 
// the file /var/run/reboot-required is found after the upgrade 
Unattended-Upgrade::Automatic-Reboot "<%= reboot %>";

// Keep old configuration files, newer are names -dist.
Dpkg::Options { "--force-confold"; }

