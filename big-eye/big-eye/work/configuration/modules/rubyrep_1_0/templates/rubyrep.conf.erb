RR::Initializer::run do |config|
  config.left = {
    :adapter  => 'mysql',
    :database => '<%= rubyrep_mysql_database %>',
    :username => 'replication',
    :password => '<%= rubyrep_mysql_password %>',
    :host     => '<%= rubyrep_mysql_first_bind_addr %>'
  }
  config.right = {
    :adapter  => 'mysql',
    :database => '<%= rubyrep_mysql_database %>',
    :username => 'replication',
    :password => '<%= rubyrep_mysql_password %>',
    :host     => '<%= rubyrep_mysql_second_bind_addr %>'
  }
<% rubyrep_mysql_replication_tables.each do |table| -%>
  config.include_tables <%= table %>
<% end -%>
  config.options[:replication_conflict_handling] = :later_wins
  config.options[:logged_sync_events] = :ignored_conflicts
end
