/var/log/erp/broker.log {
  missingok
  compress
  daily
  rotate 30
}

/var/log/erp/unicorn*.log {
  missingok
  compress
  daily
  rotate 30
  postrotate
    for i in `ls /var/run/erp/*.pid`; do
      kill -USR1 `cat $i`
    done
  endscript
}

/var/log/erp/<%= environment %>.log {
  missingok
  compress
  daily
  rotate 30
  postrotate
    for i in `ls /var/run/erp/*.pid`; do
      kill -HUP `cat $i`
    done
  endscript
}
