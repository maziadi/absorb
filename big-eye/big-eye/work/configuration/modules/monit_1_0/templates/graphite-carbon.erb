check process carbon-cache
  with pidfile "/var/run/carbon-cache.pid"
  start program = "/usr/bin/carbon-cache --config=/etc/carbon/carbon.conf --pidfile=/var/run/carbon-cache.pid --logdir=/var/log/carbon/ start"
  stop program = "/usr/bin/carbon-cache --config=/etc/carbon/carbon.conf --pidfile=/var/run/carbon-cache.pid stop"
  alert <%= monit_conf_alert_email %>

check process carbon-relay
  with pidfile "/var/run/carbon-relay.pid"
  start program = "/usr/bin/carbon-relay --config=/etc/carbon/carbon.conf --pidfile=/var/run/carbon-relay.pid --logdir=/var/log/carbon/ start"
  stop program = "/usr/bin/carbon-relay --config=/etc/carbon/carbon.conf --pidfile=/var/run/carbon-relay.pid stop"
  alert <%= monit_conf_alert_email %>
