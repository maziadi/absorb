<group id="<%= @hostname %>">
    <meta_attributes id="<%= @hostname %>_meta_attrs">
        <attributes>
            <nvpair name="target_role" id="<%= @hostname %>_metaattr_target_role" value="stopped"/>
            <nvpair id="<%= @hostname %>_metaattr_ordered" name="ordered" value="true"/>
            <nvpair id="<%= @hostname %>_metaattr_collocated" name="collocated" value="true"/>
        </attributes>
    </meta_attributes>
    <primitive id="iscsi-<%= @hostname %>-swap" class="ocf" type="iscsi" provider="heartbeat">
        <instance_attributes id="iscsi-<%= @hostname %>-swap_instance_attrs">
            <attributes>
              <nvpair id="iscsi-<%= @hostname %>-swap-attr-01" name="portal" value="<%= @portal %>"/>
                <nvpair id="iscsi-<%= @hostname %>-swap-attr-02" name="target" value="iqn.2008-07.fr.alphalink:storage.<%= @hostname %>-swap"/>
            </attributes>
        </instance_attributes>
        <meta_attributes id="iscsi-<%= @hostname %>-swap_meta_attrs">
            <attributes>
                <nvpair id="iscsi-<%= @hostname %>-swap_metaattr_is_managed" name="is_managed" value="default"/>
            </attributes>
        </meta_attributes>
    </primitive>
    <primitive id="iscsi-<%= @hostname %>-disk" class="ocf" type="iscsi" provider="heartbeat">
        <instance_attributes id="iscsi-<%= @hostname %>-disk_instance_attrs">
            <attributes>
                <nvpair id="iscsi-<%= @hostname %>-disk-attr-01" name="portal" value="<%= @portal %>"/>
                <nvpair id="iscsi-<%= @hostname %>-disk-attr-02" name="target" value="iqn.2008-07.fr.alphalink:storage.<%= @hostname %>-disk"/>
            </attributes>
        </instance_attributes>
        <meta_attributes id="iscsi-<%= @hostname %>-disk_meta_attrs">
            <attributes>
                <nvpair id="iscsi-<%= @hostname %>-disk_metaattr_is_managed" name="is_managed" value="default"/>
            </attributes>
        </meta_attributes>
    </primitive>
    <primitive class="ocf" type="Xen" provider="heartbeat" id="vserver-<%= @hostname %>">
        <operations>
            <op id="vserver-<%= @hostname %>-mon-op-01" name="monitor" interval="10s" timeout="60s" prereq="nothing"/>
            <op id="vserver-<%= @hostname %>-start-op-02" name="start" timeout="60s" start_delay="0"/>
            <op id="vserver-<%= @hostname %>-stop-op-03" name="stop" timeout="300s"/>
        </operations>
    <instance_attributes id="vserver-<%= @hostname %>_instance_attrs">
        <attributes>
            <nvpair id="vserver-<%= @hostname %>-attr-01" name="xmfile" value="/etc/xen/<%= @hostname %>.cfg"/>
            <nvpair id="vserver-<%= @hostname %>-attr-02" name="allow_migrate" value="1"/>
            <nvpair id="vserver-<%= @hostname %>-attr-03" name="allow_mem_management" value="0"/>
            <nvpair id="vserver-<%= @hostname %>-attr-04" name="reserved_Dom0_memory" value="512"/>
        </attributes>
    </instance_attributes>
    <meta_attributes id="vserver-<%= @hostname %>_meta_attrs">
        <attributes>
            <nvpair id="vserver-<%= @hostname %>_metaattr_is_managed" name="is_managed" value="default"/>
        </attributes>
    </meta_attributes>
  </primitive>
</group>

