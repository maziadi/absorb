<%= environment %>:

  brokers:
    # à reprendre depuis la conf médiation
    cdr_logs:
      q1:
        connection: &CONN
          host: <%= amq_voip_1_host %>
          port: <%= amq_voip_1_port %>
          user: <%= amq_voip_user %>
          password: <%= amq_voip_passwd %>
        queues:
          main: <%= amq_voip_1_queues %>
      q2:
        connection:
          <<: *CONN
          host: <%= amq_voip_2_host %>
          port: <%= amq_voip_2_port %>
        queues:
          main: <%= amq_voip_2_queues %>
    taxman:
      t1:
        connection: &CONN
          host: <%= amq_taxerp_1_host %>
          port: <%= amq_taxerp_1_port %>
          user: <%= amq_taxerp_user %>
          password: <%= amq_taxerp_passwd %>
      t2:
        connection:
          <<: *CONN
          host: <%= amq_taxerp_2_host %>
          port: <%= amq_taxerp_2_port %>

  queues:
    mobile_exports: "mobile"
    voip_tickets: "voip_tickets"

  pool_size:
    cdr_log_consumers: 4
    cashbot_mobile: 4
    voip_reporter: 4
    voip_monthly_exporter: 4
    outback_mobile: 8

  reconnect_delay: 10

  # nouveau
  emails:
    sender: "Taxman Notifier <ne-pas-repondre@alphalink.fr>"
    errors:
      - "si@alphalink.fr"
<% if environment == "production" -%>
      - "noc-alerts@alphalink.fr"
<% else -%>
      - "dev-noc-alerts@alphalink.fr"
<% end -%>

  apps:
    anderson:
      account_api_path: "/tmp_api/voip"

  mobile:
    apn: 'mds02011'

  dirs:
    cdr_archives: '/data/archives'
    vno_journals: '/data/vno_journals'
    accounting_report: '/data/accounting'
    cdr_archiver: '/data/cdr_archiver'
    csv_report: '/data/csv_reports'
    grid_sets: '/data/grid_sets'
    call_logs_archives: '/data/call_logs'
    sfr_tickets: '/data/sfr/tickets'
    mobile_batches: '/data/mobile_batches'
    exports: '/data/exports'
