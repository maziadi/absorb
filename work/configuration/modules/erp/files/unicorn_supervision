worker_processes 2
working_directory "/srv/supervision/"

# This loads the application in the master process before forking
# worker processes
# Read more about it here:
# http://unicorn.bogomips.org/Unicorn/Configurator.html
preload_app true

timeout 30

listen "127.0.0.1:8097", :tcp_nopush => true

pid "/var/run/supervision/unicorn.pid"

stderr_path "/var/log/supervision/unicorn.stderr.log"
stdout_path "/var/log/supervision/unicorn.stdout.log"

