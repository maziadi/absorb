/var/log/freeradius/*log {
        daily
        rotate 52
        compress
        delaycompress
        notifempty
        missingok
        postrotate
                /etc/init.d/freeradius reload > /dev/null
        endscript
}

/var/log/freeradius/radacct/*/*detail* {
        daily
        rotate 52
        compress
        delaycompress
        notifempty
        missingok
        postrotate
                /etc/init.d/freeradius reload > /dev/null
        endscript
}

