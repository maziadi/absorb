 * admin.sql -- PostgreSQL commands for creating the RADIUS user.
 *
 *	WARNING: You should change 'localhost' and 'radpass'
 *		 to something else.  Also update raddb/sql.conf
 *		 with the new RADIUS password.
 *
 *	WARNING: This example file is untested.  Use at your own risk.
 *		 Please send any bug fixes to the mailing list.
 *
 *	$Id$
 */

/*
 *  Create default administrator for RADIUS
 */
DO
$body$
BEGIN
  IF NOT EXISTS (
    SELECT *
    FROM   pg_catalog.pg_user
    WHERE  usename = '<%= db_user %>') THEN

    CREATE USER radius WITH PASSWORD '<%= db_passwd %>';
  END IF;
END
$body$;

/*
 * The server can read any table in SQL
 */
GRANT SELECT ON radcheck TO <%= db_user %>;
GRANT SELECT ON radreply TO <%= db_user %>;
GRANT SELECT ON radgroupcheck TO <%= db_user %>;
GRANT SELECT ON radgroupreply TO <%= db_user %>;
GRANT SELECT ON radusergroup TO <%= db_user %>;

/*
 * The server can write to the accounting and post-auth logging table.
 */
GRANT ALL on radacct TO <%= db_user %>;
GRANT ALL on radpostauth TO <%= db_user %>;
GRANT ALL on nas TO <%= db_user %>;
