check process sidaemon
  with pidfile "/var/run/sidaemon.pid"
  start program = "/etc/init.d/sidaemon restart"
  stop program = "/etc/init.d/sidaemon stop"
  alert <%= monit_conf_alert_email %>
  if 3 restarts within 4 cycles then timeout
  if cpu usage > 60% for 3 cycles then alert
  if cpu usage > 95% for 3 cycles then restart
