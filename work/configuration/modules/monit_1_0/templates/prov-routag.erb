check process prov-routag
   with pidfile "/var/run/prov-routag.pid"
   start program = "/etc/init.d/prov-routag restart"
   stop program = "/etc/init.d/prov-routag stop"
   alert <%= monit_conf_alert_email %>
   if 3 restarts within 4 cycles then timeout
   if totalmem > 51 Mb then restart
   if cpu usage > 60% for 3 cycles then alert
   if cpu usage > 95% for 3 cycles then restart
