set number
set cursorline
set cursorcolumn
set showcmd		" Show (partial) command in status line.
set showmatch		" Show matching brackets.
set ignorecase		" Do case insensitive matching
set hlsearch

"Colorscheme
let g:solarized_termtrans=1
set background=dark
colorscheme solarized
highlight clear SpecialKey " to be used with 'listchars=tab:\ \ '
" Display tabs, non-breakable spaces and trailing spaces visually
set listchars=nbsp:_,tab:→\ ,trail:·
map <leader>l :set list!<CR>

au InsertEnter * hi StatusLine term=bold,reverse cterm=bold,reverse ctermfg=1 ctermbg=0 gui=bold,reverse
au InsertLeave * hi StatusLine term=bold,reverse cterm=bold,reverse ctermfg=6 ctermbg=0 gui=bold,reverse

set laststatus=2
set statusline=%F%m%r%h%w\ %{mode()}%=[%l,%v][%p%%]

set wmh=0
set wmw=0

set wrap "Cut lines when reaching right
set linebreak "Wrap lines at convenient points

nnoremap <leader>H :Hexmode<CR>
vnoremap <leader>H :<C-U>Hexmode<CR>

" ================ 80 columns ======================
au FileType java highlight OverLength ctermbg=red ctermfg=white guibg=#592929
au FileType java match OverLength /\%81v\+/
au BufEnter *.java highlight OverLength ctermbg=red ctermfg=white guibg=#592929
au BufEnter *.java match OverLength /\%81v\+/

" ================ Indentation ======================
set autoindent
set smartindent
set smarttab
set shiftwidth=2
set softtabstop=2
set tabstop=2
set expandtab

" ================ Folding ======================
set backspace=indent,eol,start
" set foldmethod=syntax
set nofoldenable

" vim: ft=vim
