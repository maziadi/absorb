#!/bin/dash

pasdaran_response() {
# $1 : pasdaran return code
  local ret=""
  case "$1" in
    "0")
      ret="OK"
      ;;  
    "1")
      ret="BAD_QUOTA_FILE"
      ;;  
    "255")
      ret="ERROR_UNDEFINED"
      ;;  
    "2")
      ret="ERROR_ADD_CO_IP"
      ;;  
    "3")
      ret="ERROR_ADD_CO_RULES"
      ;;  
    "4")
      ret="ERROR_DEL_CO_IP"
      ;;  
    "5")
      ret="ERROR_DEL_CO_RULES"
      ;;  
    "6")
      ret="BAD_PARAMS"
      ;;  
    "7")
      ret="ERROR_ADD_FRD_IP"
      ;;  
    "8")
      ret="ERROR_ADD_FRD_RULES"
      ;;  
    "9")
      ret="ERROR_DEL_FRD_IP"
      ;;  
    "10")
      ret="ERROR_DEL_FRD_RULES"
      ;;  
    *)
      ret="UNKNOWN_ERROR"
      ;;  
  esac
  echo "$ret"
}

