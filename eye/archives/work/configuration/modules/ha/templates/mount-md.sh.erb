#!/bin/sh

[ $# -eq 1 ] || {
        echo "Please don't execute this script or system will be crashed !!!"
        exit 1
}
[ $1 = "puppet" ] || exit 2

drbdadm -- --overwrite-data-of-peer primary <%= name -%> || exit 3
mkfs.reiserfs -q -f /dev/<%= name -%> || exit 4
mount <%= mountpoint %> || exit 5
mkdir -p /etc/flags || exit 6
touch /etc/flags/drbd-dont-mount-md-<%= name -%>.flag || exit 7
chattr +i /etc/flags/drbd-dont-mount-md-<%= name -%>.flag || exit 8
