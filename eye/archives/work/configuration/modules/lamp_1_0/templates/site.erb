<VirtualHost *:80>
        ServerAdmin webmaster@alphalink.fr
        ServerName <%= servername %>
        ServerAlias <%= vhostalias %>
        DocumentRoot "/var/www/<%= name %>/www"
        <Directory />
                Options FollowSymLinks
                AllowOverride All
        </Directory>
        <Directory "/var/www/<%= name %>/www">
                php_admin_value open_basedir "/var/www/<%= name %>"
                php_admin_value upload_tmp_dir "/var/www/<%= name %>/tmp"
                Options Indexes FollowSymLinks MultiViews
                AllowOverride All
                Order allow,deny
                allow from all
        </Directory>

        <% if joomla_adm_ip != '' %>
        <Directory "/var/www/<%= name %>/www/administrator">
          Order Deny,Allow
          Deny from all
        <% joomla_adm_ip.each{|ip| -%>
          Allow from <%= ip %>
        <% } -%>
        </Directory>
        <% end %>

        ErrorLog "/var/www/<%= name %>/logs/error.log"

        # Possible values include: debug, info, notice, warn, error, crit,
        # alert, emerg.
        LogLevel warn

        CustomLog "/var/www/<%= name %>/logs/access.log" combined
        ServerSignature Off
</VirtualHost>
