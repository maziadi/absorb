<?xml version="1.0"?>
<?castor class-name="org.opennms.netmgt.collectd.CollectdConfiguration"?>
<collectd-configuration 
	threads="50">

	  <!-- 
    <filter>IPADDR != '0.0.0.0'</filter>
    <specific>10.2.44.227</specific>
    -->
	<package name="production">
		<filter>((IPADDR != '0.0.0.0') AND (categoryName == 'Production'))</filter>
    <include-range begin="1.1.1.1" end="254.254.254.254"/>	
		<service name="SNMP" interval="300000" user-defined="false" status="on">
			<parameter key="collection" value="base"/>
			<parameter key="thresholding-enabled" value="true"/>
		</service>
	</package>
	  <!-- 
    <filter>((IPADDR != '0.0.0.0') AND (categoryName == 'Routeur'))</filter>
    <filter>((IPADDR != '0.0.0.0') AND (categoryName == '95th'))</filter>
		<filter>((IPADDR != '0.0.0.0') AND (categoryName == 'Disk'))</filter>
		<filter>((IPADDR != '0.0.0.0') AND (categoryName == 'Lima'))</filter>
		<filter>((IPADDR != '0.0.0.0') AND (categoryName == 'Callweaver'))</filter>
		<filter>((IPADDR != '0.0.0.0') AND (categoryName == 'APC'))</filter>
    -->
	<package name="routeur">
    <filter><![CDATA[((IPADDR != '0.0.0.0') & catincRouteur)]]></filter>
    <include-range begin="1.1.1.1" end="254.254.254.254"/>	
		<service name="SNMP" interval="300000" user-defined="false" status="on">
			<parameter key="collection" value="interfaces"/>
			<parameter key="thresholding-enabled" value="true"/>
		</service>
	</package>
	<package name="95th">
    <filter><![CDATA[((IPADDR != '0.0.0.0') & catinc95th)]]></filter>
    <include-range begin="1.1.1.1" end="254.254.254.254"/>	
		<service name="SNMP" interval="300000" user-defined="false" status="on">
			<parameter key="collection" value="95th"/>
			<parameter key="thresholding-enabled" value="true"/>
		</service>
	</package>
	<package name="lima">
    <filter><![CDATA[((IPADDR != '0.0.0.0') & catincLima)]]></filter>
    <include-range begin="1.1.1.1" end="254.254.254.254"/>	
		<service name="SNMP" interval="300000" user-defined="false" status="on">
			<parameter key="collection" value="lima"/>
			<parameter key="thresholding-enabled" value="true"/>
		</service>
	</package>
	<package name="disk">
    <filter><![CDATA[((IPADDR != '0.0.0.0') & catincDisk)]]></filter>
    <include-range begin="1.1.1.1" end="254.254.254.254"/>	
		<service name="SNMP" interval="300000" user-defined="false" status="on">
			<parameter key="collection" value="disk"/>
			<parameter key="thresholding-enabled" value="true"/>
		</service>
	</package>
	<package name="callweaver">
    <filter><![CDATA[((IPADDR != '0.0.0.0') & catincCallweaver)]]></filter>
    <include-range begin="1.1.1.1" end="254.254.254.254"/>	
		<service name="SNMP" interval="300000" user-defined="false" status="on">
			<parameter key="collection" value="callweaver"/>
			<parameter key="thresholding-enabled" value="true"/>
		</service>
	</package>
	<package name="apc">
    <filter><![CDATA[((IPADDR != '0.0.0.0') & catincAPC)]]></filter>
    <include-range begin="1.1.1.1" end="254.254.254.254"/>	
		<service name="SNMP" interval="300000" user-defined="false" status="on">
			<parameter key="collection" value="apc"/>
			<parameter key="thresholding-enabled" value="true"/>
		</service>
	</package>
  <package name="datacenter2">
    <filter>(IPADDR != '0.0.0.0')</filter>
    <specific>127.0.0.1</specific>
    <service name="SNMP" interval="300000" user-defined="false" status="on">
      <parameter key="collection" value="datacenter2"/>
      <parameter key="thresholding-enabled" value="true"/>
    </service>
  </package>
  <package name="linux">
    <filter>(IPADDR != '0.0.0.0')</filter>
    <include-range begin="1.1.1.1" end="254.254.254.254"/>	
    <service name="SNMP" interval="300000" user-defined="false" status="on">
      <parameter key="collection" value="linux"/>
      <parameter key="thresholding-enabled" value="true"/>
    </service>
  </package>

	<collector service="SNMP" class-name="org.opennms.netmgt.collectd.SnmpCollector"/>
</collectd-configuration>

