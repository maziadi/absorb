check process asterisk
   with pidfile "/var/run/asterisk/asterisk.pid"
   start program = "/etc/init.d/asterisk restart"
   stop program = "/etc/init.d/asterisk stop"
   alert <%= monit_conf_alert_email %>
   if 3 restarts within 4 cycles then timeout
   if totalmem > 100 Mb then alert
   if children > 255 for 5 cycles then restart
   if children > 10 for 5 cycles then alert
   if cpu usage > 95% for 3 cycles then restart
   if cpu usage > 60% for 3 cycles then alert
   if failed host <%= service_addr %> port 5060 type udp protocol SIP
      with target "0110000000000@<%= service_addr %>"
      for 2 cycles then alert
   if failed host <%= service_addr %> port 5060 type udp protocol SIP
      with target "0110000000000@<%= service_addr %>"
      for 6 cycles then restart
   group asterisk
