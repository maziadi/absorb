check process cdr-archiver-cbv2
   with pidfile "/var/run/cdr-archiver-cbv2d.pid"
   start program = "/etc/init.d/cdr-archiver-cbv2 restart"
   stop program = "/etc/init.d/cdr-archiver-cbv2 stop"
   alert <%= monit_conf_alert_email %>
   if 3 restarts within 4 cycles then timeout
   if totalmem > 15 Mb then restart
   if cpu usage > 60% for 3 cycles then alert
   if cpu usage > 95% for 3 cycles then restart
