check process routag
   with pidfile "/var/run/jboss-as/jboss-as.pid"
   start program = "/etc/init.d/jboss-as start"
   stop program = "/etc/init.d/jboss-as stop"
   alert <%= monit_conf_alert_email %>
   if 3 restarts within 4 cycles then timeout
   if children > 255 for 5 cycles then restart
   if children > 100 for 5 cycles then alert
   if cpu usage > 95% for 3 cycles then restart
   if cpu usage > 60% for 3 cycles then alert
   if failed host <%= routag_service_addr -%> port <%= routag_service_port -%>  type udp protocol SIP
      with target "ping@<%= routag_service_addr -%>:<%= routag_service_port -%>"
      for 4 cycles then restart
   group routag
