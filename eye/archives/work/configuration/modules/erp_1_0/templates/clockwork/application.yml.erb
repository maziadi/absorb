## Parameters for alphalink application
#
## FTP server connection
#
get_ftp_server:
  host: <%= clockwork_get_ftp_host %>
  port: 21
  username: <%= clockwork_get_ftp_username %>
  password: <%= clockwork_get_ftp_password %>
<% if clockwork_get_ftp_repository != '' -%>
  repository: <%= clockwork_get_ftp_repository %>
<% end -%>

put_ftp_server:
  host: <%= clockwork_put_ftp_host %>
  port: 21
  username: <%= clockwork_put_ftp_username %>
  password: <%= clockwork_put_ftp_password %>
<% if clockwork_put_ftp_repository -%>
  repository: <%= clockwork_put_ftp_repository %>
<% end -%>

## AMQ server connection
#
get_amq_server:
  host: <%= clockwork_get_amq_host %>
  port: 61613
  username: <%= clockwork_get_amq_username %>
  password: <%= clockwork_get_amq_password %>
  repository: <%= clockwork_get_amq_queue %>
 
put_amq_server:
  host: <%= clockwork_put_amq_host %>
  port: 61613
  username: <%= clockwork_put_amq_username %>
  password: <%= clockwork_put_amq_password %>
  repository: <%= clockwork_put_amq_queue %>

