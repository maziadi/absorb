worker_processes <%= unicorn_workers %>
working_directory "/srv/<%= app_name %>/"

# This loads the application in the master process before forking
# worker processes
# Read more about it here:
# http://unicorn.bogomips.org/Unicorn/Configurator.html
preload_app true

timeout <%= unicorn_timeout %>

listen "<%= bind_address %>:<%= bind_port %>", :tcp_nopush => true

pid "/var/run/<%= app_name %>/unicorn.pid"

stderr_path "/var/log/<%= app_name %>/unicorn.stderr.log"
stdout_path "/var/log/<%= app_name %>/unicorn.stdout.log"

<% if unicorn_sql -%>
before_fork do |server, worker|
# This option works in together with preload_app true setting
# What is does is prevent the master process from holding
# the database connection
  defined?(ActiveRecord::Base) and
    ActiveRecord::Base.connection.disconnect!
end
<% end -%>

<% if unicorn_sql -%>
after_fork do |server, worker|
# Here we are establishing the connection after forking worker
# processes
  defined?(ActiveRecord::Base) and
    ActiveRecord::Base.establish_connection
end
<% end -%>
