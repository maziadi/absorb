check process eligibilityd
  with pidfile "/var/run/eligibilityd.pid"
  start program = "/etc/init.d/eligibilityd restart"
  stop program = "/etc/init.d/eligibilityd stop"
  alert monit@admin.alphalink.fr
  if 3 restarts within 4 cycles then timeout

check process eligibility-bgd
  with pidfile "/var/run/eligibility-bgd.pid"
  start program = "/etc/init.d/eligibility-bgd restart"
  stop program = "/etc/init.d/eligibility-bgd stop"
  alert monit@admin.alphalink.fr
  if 3 restarts within 4 cycles then timeout
