logfacility     syslog
debug           <%= debug_level %>
keepalive       5
warntime        10
deadtime        30
initdead        120
compression bz2
compression_threshold 30
traditional_compression yes
<% if use_serial -%>
baud            19200
serial          /dev/ttyS0
<% end -%>
<% if deadping -%>
deadping <%= ha_deadping_time %>
<% end -%>
<% ucasts.each do |ucast| -%>
ucast <%= ucast %>
<% end -%>
<% bcasts.each do |bcast| -%>
bcast <%= bcast %>
<% end -%>
<% mcasts.each do |mcast| -%>
mcast <%= mcast %>
<% end -%>
auto_failback   <%= auto_failback %>
<% if use_crm -%>
crm on
<% end -%>
autojoin none
<% if use_watchdog -%>
watchdog /dev/watchdog
<% end -%>
<%= cluster_nodes.collect { |name| "node    #{name}" }.join("\n")  %>
