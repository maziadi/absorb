  root /usr/share/nginx/www;
  index index.xml;

  server_name localhost;

  location / {
    try_files $uri $uri/ /index.xml;
  }

  location /doc/ {
          alias /usr/share/doc/;
          autoindex on;
          allow 127.0.0.1;
          allow ::1;
          deny all;
